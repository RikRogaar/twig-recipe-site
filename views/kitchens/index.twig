{% extends "./layouts/app.twig" %}

{% block table %}
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th colspan="3">Name</th>
            </tr>
        </thead>
        <tbody>
            {% for kitchen in kitchens %}
                <tr>
                    <td colspan="3"><a href="/kitchen/show?id={{kitchen.id}}">{{ kitchen.name }}</a></td>
                </tr>
            {% endfor %}
            <tr>
                <td colspan="3" width="100%">
                    <a href="/kitchen/create" class="btn btn-primary btn-block">Add a new kitchen</a>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}